<%- include('partials/header') %>

<div class="auth-container animate-fade-in">
    <div class="card">
        <h1 class="card-title">
            <i class="fas fa-sign-in-alt"></i> Welcome Back!
        </h1>
        
        <form action="/login" method="POST">
            <div class="form-group">
<label for="username" class="form-label">Username</label>
                <div class="input-with-icon">
                    <i class="fas fa-user icon"></i>
                    <input type="text" id="username" name="username" class="form-input"
required placeholder="Enter your username">
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
    <div class="input-with-icon">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" id="password" name="password" class="form-input"
required placeholder="Enter your password">
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                <i class="fas fa-sign-in-alt"></i> Login
      </button>
        </form>

        <div class="auth-footer">
           Don't have an account? <a href="/signup">Sign up now</a>
        </div>
    </div>
</div>

<%- include('partials/footer', { include_js: '<script>if (new URLSearchParams(window.location.search).has("registered")) { showToast("Account created successfully! Please log in.", "success"); }</script>' }) %>