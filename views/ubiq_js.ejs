<script>
$(document).scroll(function() {
    var footerHeightOffset = $('.page-footer').height() + 10;
    if($('#cards-fab').offset() && $('.page-footer').offset()){
        if($('#cards-fab').offset().top + $('#cards-fab').height() >= $('.page-footer').offset().top - 15)
            $('#cards-fab').css("margin-bottom", footerHeightOffset);
        if($(document).scrollTop() + window.innerHeight < $('.page-footer').offset().top)
            $('#cards-fab').css("margin-bottom", "0px");
    }
});
$(".dropdown-trigger").dropdown({ constrainWidth: false, coverTrigger: false, hover: true });
$('.sidenav').sidenav();
$("#cards-fab").floatingActionButton();
$('.tooltipped').tooltip();
// flashed messages handled server-side when rendering
</script>
